<Page x:Class="WpfApp_Basics.Basics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_Basics"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Basics">

    <Grid Background="White">
        <Label Content="Enter name here:" HorizontalAlignment="Left" Margin="27,25,0,0" VerticalAlignment="Top" Background="White" FontSize="20"/>
        <Label Content="Your name is: " HorizontalAlignment="Left" Margin="27,267,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="NameIn" HorizontalAlignment="Left" Height="23" Margin="230,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20" BorderBrush="Black"/>
        <TextBox x:Name="NameOut" HorizontalAlignment="Left" Height="23" Margin="230,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Button x:Name="MySubmit" Content="Submit" HorizontalAlignment="Left" Margin="246,153,0,0" VerticalAlignment="Top" Width="75" FontSize="20" Click="Button_Click"/>

    </Grid>
</Page>
